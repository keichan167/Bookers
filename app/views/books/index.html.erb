
<body>

  <div style = "margin-left: 30px;">
    <h2>Books</h2>
  <table>
    <tr>
      <th>Title</th>
      <th>body</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%=book.title %></td>
        <td><%=book.body %></td>
        <td><%= link_to "Show", "/books/#{book.id}" %></td>
        <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
        <td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </table>
  </div>
  
  <!--エラー表示-->
  <div style = "margin-left: 30px;">
    <% if @book.errors.any? %>
      <!--エラーの数表示-->
      <% if (@book.errors.count == 1) %>
        <%= @book.errors.count %>error
      <% else %>
        <%= @book.errors.count %>errors
      <% end %>
      <!--エラーの内容の表示-->
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>
  </div>
    
  <div style = "margin-left: 30px;">
    <h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
    Title<br>
    <%= f.text_field :title %>
    <br>
    <br>
    Body<br>
    <%= f.text_area :body %>
    <br>

    <%= f.submit 'Create Book' %>
  <% end %>
  </div>
</body>
